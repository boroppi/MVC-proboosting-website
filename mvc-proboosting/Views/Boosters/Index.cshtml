@model IEnumerable<mvc_proboosting.Models.Booster>

@{
    ViewBag.Title = "Boosters";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="h-title">Boosters</h2>

<p>
    @if (User.Identity.IsAuthenticated)
    {
        @Html.ActionLink("Create New", "Create", null, new { @class = "fas fa-plus" })

    }
</p>
<table class="table sortable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAvailable)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @(item.IsAvailable)
            </td>
            <td>
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.BoosterId }, new { @class = "fas fa-edit" })
                    @Html.ActionLink("Details", "Details", new { id = item.BoosterId }, new { @class = "fas fa-list-ul" })

                    @Html.ActionLink("Delete", "Delete", new { id = item.BoosterId }, new { @class = "fas fa-trash-alt" })


                }


                @if (!User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Details", "Details", new { id = item.BoosterId }, new { @class = "fas fa-list-ul" })

                }

            </td>
        </tr>
    }


</table>
